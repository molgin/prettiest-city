<h1><%= @city.full_name %></h1>

<% if @city.has_matchups? %>

  <ul>
    <li>Total Matches: <%= @city.total %></li>
    <br>
    <li>Winning Percentage: <%= @city.win_percentage_display %></li>
    <br>
    <li>Record: <%= "#{@city.wins} â€” #{@city.losses}" %></li>
  </ul>


  <!-- 
    <h2>Most Recent Winner(s)</h2>

      <#% @winning_coords.each do |pair| %>
        <img src ="https://maps.googleapis.com/maps/api/streetview?size=400x400&location=<%#= pair.first %>,<%#= pair.last %>&fov=90&heading=34&pitch=10">
    <#% end %> -->

  <div id="map-container" style="height: 600px; width: 800px; border-radius: 16px 16px; border-color: #fff; border-style: solid; box-shadow: 2px 2px 10px #B1B1B1; margin-top: 25px; border-width: 7px;">
    <div id="map-canvas" style="height: 586px; width: 100%;"></div>
  </div>

  <h2>Recent Matchups</h2>

  <ul>

    <% @city.recent_matchups(10).each do |matchup| %>
      <% point = matchup.point_by_city(@city) %>
      <% competitor = matchup.competitor(point) %>
    <li>
      <strong><img src ="https://maps.googleapis.com/maps/api/streetview?size=400x400&location=<%= point.coords.first %>,<%= point.coords.last %>&fov=90&heading=34&pitch=10"> <%= link_to "#{point.street_address}, #{point.city.name}", point_path(point) %></strong> <%= (matchup.won?(@city) ? "beat" : "lost to") %> <img src ="https://maps.googleapis.com/maps/api/streetview?size=400x400&location=<%= competitor.coords.first %>,<%= competitor.coords.last %>&fov=90&heading=34&pitch=10"> <strong><%= link_to "#{competitor.street_address}, #{competitor.city.name}", point_path(competitor) %></strong>
    </li>

    <% end %>

  </ul>



<% else %>

  <h3><%= @city.name %> hasn't had any matchups yet!</h3>

<% end %>