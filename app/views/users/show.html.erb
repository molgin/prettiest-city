<section class="container-fluid">

  <h1 class="text-center"><%= @user.name if @user.name %></h1>

  <section class="row center-block">

    <div class="col-md-3"></div>

    <section id="my-cities" class="col-md-3">
      <h2>My Cities</h2>
      <ul>
      <% @user.cities.each do |city| %>
        <li>
          <%= link_to city.full_name, city_path(city) %>
        </li>
      <% end %>
      </ul>
    </section>

    <section id="my-rankings" class="col-md-3">
      <h2>My Rankings</h2>

      <ol>

        <% @user.cities_by_win_ratio.each do |city| %>

          <li>
            <strong><%= link_to city.full_name, city_path(city) %></strong><br>won <%= city.win_percentage_display_by_user(@user) %> of <%= city.total_by_user(@user) %> matchups
          </li>

        <% end %>

      </ol>
    </section>

  </section>

</section>